@{
    ViewBag.Title = "Suboku";
}

@*Проект доступен по адресу http://sudoku2.azurewebsites.net/*@

<div class="row matrix">
    <div class="col-md-1">
        &nbsp;
    </div>
    <div class="col-md-7">
        <div id="tableDiv"></div>
    </div>
    <div class="col-md-2">
        <div class="row">
            <input id="userName" disabled="disabled" />
        </div>
        <div class="row">
            <button id="btnChangeName">Изменить имя</button>
        </div>
        <div class="row">
            <button id="btnNewGame">Новая игра</button>
        </div>
        <div class="row">
            <button id="btnHint">Подсказка</button>
        </div>
        <div class="row">
            <button id="btnGetResults">Результаты</button>
        </div>
        <div class="row">
            <div class="row">
                <div class="col-md-4 left-button"><button class="number">1</button></div>
                <div class="col-md-4 middle-button"><button class="number">2</button></div>
                <div class="col-md-4 right-button"><button class="number">3</button></div>
            </div>
            <div class="row">
                <div class="col-md-4 left-button"><button class="number">4</button></div>
                <div class="col-md-4 middle-button"><button class="number">5</button></div>
                <div class="col-md-4 right-button"><button class="number">6</button></div>
            </div>
            <div class="row">
                <div class="col-md-4 left-button"><button class="number">7</button></div>
                <div class="col-md-4 middle-button"><button class="number">8</button></div>
                <div class="col-md-4 right-button"><button class="number">9</button></div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        &nbsp;
    </div>
</div>

<link href="~/Content/site.css?v3" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
<script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
<script src="~/signalr/hubs"></script>
<script src="~/Scripts/main.js?v19"></script>

